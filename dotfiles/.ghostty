# Requires Ghostty config to be set to load from this from home directory;
## Relative path to home from ~/Library/Application Support/com.mitchellh.ghostty/config
## https://ghostty.org/docs/config/reference#config-file
#config-file = ../../../.ghostty

# https://github.com/zerebos/ghostty-config
# Config generated by Ghostty Config

working-directory = home
scrollback-limit = 100000
window-padding-x = 5
window-padding-y = 10
theme = Dark+
background = #1e1e1e
foreground = #cccccc
selection-background = #3a3d41
selection-foreground = #e0e0e0
selection-invert-fg-bg = true
cursor-color = #ffffff
cursor-text = #000000
cursor-style = "bar"
cursor-style-blink = true
palette = 0=#000000
palette = 1=#cd3131
palette = 2=#0dbc79
palette = 3=#e5e510
palette = 4=#2472c8
palette = 5=#bc3fbc
palette = 6=#11a8cd
palette = 7=#e5e5e5
palette = 9=#f14c4c
palette = 10=#23d18b
palette = 11=#f5f543
palette = 12=#3b8eea
palette = 13=#d670d6
palette = 14=#29b8db
palette = 15=#e5e5e5
font-size = 14
font-family = "inconsolata nerd font mono"
font-style-bold = "Medium"
font-style-bold-italic = "Medium Italic"
grapheme-width-method = "unicode"